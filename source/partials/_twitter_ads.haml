%div.twitter
  // "Twitter Ads Conversion Tracking"
  = partial "data", locals: { id: "twitter_tracking_id", value: content[:tracking][:id]}
  = partial "data", locals: { id: content[:tracking][:id], value: content[:tracking][:value]}

  %script{ src: "//platform.twitter.com/oct.js", type: "text/javascript" }
  %script{ type: "text/javascript" }
    var tracking_id = "#" + $('twitter_tracking_id').val();
    twttr.conversion.trackPid( $(tracking_id).val(), { tw_sale_amount: 0, tw_order_quantity: 0 });

  %img{ height: "1",
        width: "1",
        style: "display:none;",
        alt: "",
        src: "https://analytics.twitter.com/i/adsct?txn_id=#{content[:tracking][:value]}&p_id=Twitter&tw_sale_amount=0&tw_order_quantity=0" }

  %img{ height: "1",
        width: "1",
        style: "display:none;",
        alt: "",
        src: "//t.co/i/adsct?txn_id=#{content[:tracking][:value]}&p_id=Twitter&tw_sale_amount=0&tw_order_quantity=0" }
