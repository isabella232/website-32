// "See http://ogp.me/ for more information"
%meta{ name: "og:url", content: content[:url] + current_resource.url }
- ["type", "site_name", "title", "description", "image", "audio", "video"].each do |property|
  - @metadata = current_resource.data[property] || content[property]
  - if @metadata.kind_of? Hash
    - @metadata.each do |name, value|
      - if name == "url"
        - value = content.url + value
      %meta{ name: "og:#{property}:#{name}", content: value }
  - else
    %meta{ name: "og:#{property}", content: @metadata }
