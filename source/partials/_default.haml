%div.content-block{ id: content[:id] }
  = stylesheet_link_tag "content-block"
  = partial "heading", locals: { content: content }
  - if content[:content]
    %div.content-body
      - if content[:content].kind_of?(String)
        = partial "display", locals: { content: content[:content] }
      - else
        - content[:content].each do |item|
          - if item.kind_of?(Array)
            - columns = content[:columns] || 1
            = partial "list", locals: { items: item, columns: columns }

          - else
            = partial "display", locals: { content: item }
  - if content[:img]
    %div.content-image
      = partial "partials/img", locals: { content: content }
